{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "./build",
    "inlineSources": true,
    "jsx": "preserve",
    "sourceRoot": "/"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
